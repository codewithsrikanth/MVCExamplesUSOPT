@model List<CRUDMVCwithADO.Models.Employee>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <title>Index</title>
</head>
<body>
    <div class="container"> 
        <h1 class="h1 text-center text-success">Employee CRUD with MVC + ADO.Net</h1>
        <hr />
        <a href="/Home/Create" class="btn btn-success">Create New Employee</a>
        <br /><br />
        <table class="table table-hover table-bordered">
            <tr>
                <th>Eno</th>
                <th>Ename</th>
                <th>Salary</th>
                <th>Job</th>
                <th>Dname</th>
                <th style="text-align:center;">DB Operations</th>
            </tr>
            @{ 
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Eno</td>
                        <td>@item.Ename</td>
                        <td>@item.Salary</td>
                        <td>@item.Job</td>
                        <td>@item.Dname</td>
                        <td style="text-align:center;">
                            <a class="btn btn-info" href="Home/Details/@item.Eno">Details</a>
                            <a class="btn btn-warning" href="Home/Edit/@item.Eno">Edit</a>
                            <a class="btn btn-danger" href="Home/Delete/@item.Eno">Delete</a>
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</body>
</html>
